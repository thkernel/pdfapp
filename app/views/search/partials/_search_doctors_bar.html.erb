<div class="card">
  <div class="card-body text-center">
				<%= form_with(url: search_doctors_path, method: "get", class: "search-form", local: true) do |f| %>

				<div class="row ">

					
						<div class="col-md-6">
							<div class="form-group">
								<%= f.text_field(:misc, class: "form-control", placeholder: "Spécialité, Médecin, Labo,  Établissement, Centre radiologique", value: @misc) %>
					  	</div>
					  </div>

					 
					  	

					  	<div class="col-md-3">
					  		<div class="form-group">
								
					  			<%= f.collection_select(:locality,  @localities, :id, :city, {prompt: "Sélectionner une localité", selected: (@locality if @locality.present?)},  class: "form-control" ) %>
					  		</div>
					  	</div>
						<div class="col-md-3">
							<div class="form-group">
					  			<%= f.submit("RECHERCHER", class: "btn btn-primary btn-block") %>
							</div>
						</div>

				

				  
				  </div>
				<% end %>
				
			</div>
            </div>