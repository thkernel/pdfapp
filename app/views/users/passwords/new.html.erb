
<div class="register-box">
  <div class="register-logo">

    <%= render 'components/logo/logo' %>
  </div>
  <div class="box box-primary">
    <div class="box-body">
      <p class="login-box-msg"><h4>Mot de passe oublié</h4></p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <!-- <%= render "devise/shared/error_messages", resource: resource %> -->

            <div class="form-group">
              
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Votre adresse email", required: true %>
            </div>

            <div class="form-group login">
              <%= f.submit "Envoyer le mail de réinitialisation", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

            
    </div>
    <div class="o-line">
      <div class="mg-t-10 tx-center">
			  <%= link_to "Se connecter", new_session_path(resource_name), class: "tx-info" %> <br />
      	<%= link_to "S'inscrire", new_registration_path(resource_name), class: "tx-info" %>

		  </div>
    </div>
</div>
