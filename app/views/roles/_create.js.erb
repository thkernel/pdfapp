$("ul.errors").html("");
<% if @role.errors.any? %>
  <% @role.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".roles").html("<%= escape_javascript(render 'index') %>");
  $("#role-modal").modal("hide");
 
<% end %>